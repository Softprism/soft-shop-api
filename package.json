{
	"name": "soft-shop-api",
	"version": "1.0.0",
	"description": "api endpoint for the soft shop app",
	"engines": {
		"node": "14.x"
	},
	"scripts": {
		"clean": "rm -rf build && npm run build-babel",
		"build-babel": "babel -d ./build ./src -s --copy-files",
		"build": "npm run clean && npm run build-babel",
		"start": " npm run build && node ./build/server.js",
		"dev": "nodemon --exec babel-node src/server.js"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-jwt": "^6.0.0",
		"express-mongo-sanitize": "^2.1.0",
		"express-validator": "^6.14.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^8.5.1",
		"mongodb": "^3.5.9",
		"mongoose": "^5.9.21",
		"mongoose-validator": "^2.1.0",
		"nodemailer": "^6.7.0",
		"otp-generator": "^3.0.0",
		"path": "^0.12.7",
		"rootpath": "^0.1.2",
		"validator": "^13.7.0",
		"xss-clean": "^0.1.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.0",
